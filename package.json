{
  "name": "brix-green-belt-graduation",
  "version": "1.0.0",
  "main": "dist/Adapters/Http/CarHandler.js",
  "scripts": {
    "ci.production": "npm ci --only:production",
    "build": "tsc",
    "bruno": "cd api/CarTripKataCollection && npx @usebruno/cli run health.bru",
    "generate-openapi-models": "typed-openapi api/contract/openapi.yaml -o src/Adapters/Http/generated/rest-models.ts -r zod && eslint src/Adapters/Http/generated/rest-models.ts --fix",
    "start.dev": "npx ts-node src/Adapters/Http/CarHandler.ts",
    "start": "node dist/Adapters/Http/CarHandler.js",
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "test": "jest --watchAll --color --coverage --verbose",
    "test:ci": "jest --color --coverage --verbose",
    "lint": "eslint . --ext .ts --ignore-pattern 'dist/**' --max-warnings 0",
    "build-image": "docker build -t brix-green-belt-graduation . --progress=plain",
    "run-image": "docker run -d -p 3000:3000 brix-green-belt-graduation",
    "smoketest": "npm run bruno"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 ."
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@usebruno/cli": "^2.9.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typed-openapi": "^1.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^4.0.17"
  }
}
